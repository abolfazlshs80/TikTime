<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups"
    x:Class="TikTime.MauiApp.MVVM.View.Customer.AddCustomerDialog"
    BackgroundColor="#80000000">

    <Frame BackgroundColor="White"
           Padding="20"
           CornerRadius="20"
           HorizontalOptions="Center"
           VerticalOptions="Center"
           WidthRequest="300">

        <VerticalStackLayout Spacing="15">
            <Entry x:Name="nameEntry" TextColor="Black" Placeholder="نام" />
            <Entry x:Name="phoneEntry" TextColor="Black" Placeholder="شماره موبایل" Keyboard="Telephone" />
            <Button Text="✔" Clicked="OnLoginClicked" 
                    BackgroundColor="Transparent">
                <Button.Background>
                    <LinearGradientBrush EndPoint="1,0">
                        <GradientStop Color="#8A2BE2" Offset="0.0" />
                        <GradientStop Color="#FF1493" Offset="1.0" />
                    </LinearGradientBrush>
                </Button.Background>
            </Button>
        </VerticalStackLayout>

    </Frame>
</mopups:PopupPage>