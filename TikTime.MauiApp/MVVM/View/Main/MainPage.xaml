<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TikTime.MauiApp.MVVM.View.Main.MainPage"
             BackgroundColor="#1A1A1A"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto">
        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="15" Padding="15">

                <!-- Header -->
                <Grid ColumnDefinitions="Auto,*,Auto" 
                      HeightRequest="50"
                      Margin="0,10,0,0">

                    <!-- Logo -->
                    <HorizontalStackLayout Grid.Column="0" Spacing="5">
                        <Frame BackgroundColor="#8A2BE2"
                               HeightRequest="24"
                               WidthRequest="24"
                               CornerRadius="12"
                               Padding="0"
                               HasShadow="False">
                            <Image Source="check.png" 
                                   HeightRequest="14" 
                                   WidthRequest="14"/>
                        </Frame>
                        <Label Text="TIK TIME" 
                               TextColor="#FF00FF" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- Version -->
                    <Label Grid.Column="2"
                           Text="VER-3.14"
                           TextColor="White"
                           FontSize="12"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Main Banner -->
                <Frame BackgroundColor="#2D1B69"
                       CornerRadius="20"
                       HasShadow="False"
                       Padding="0"
                       HeightRequest="180">
                    <Grid>
                        <!-- Background Image -->
                        <Image Source="dashboard_character.png"
                               Aspect="AspectFill"
                               HorizontalOptions="End"
                               VerticalOptions="Fill"/>

                        <!-- Content Overlay -->
                        <VerticalStackLayout Padding="20"
                                             VerticalOptions="Start"
                                             HorizontalOptions="Start">
                            <Label Text="کمک لازم داری؟"
                                   TextColor="White"
                                   FontSize="18"
                                   FlowDirection="RightToLeft"/>

                            <HorizontalStackLayout Spacing="10" Margin="0,10,0,0">
                                <Image Source="back_arrow.png"
                                       HeightRequest="16"
                                       WidthRequest="16"
                                       Rotation="180"/>
                                <Label Text="پشتیبانی"
                                       TextColor="White"
                                       FontSize="16"
                                       FlowDirection="RightToLeft"/>
                            </HorizontalStackLayout>

                            <HorizontalStackLayout Spacing="5" Margin="0,20,0,0">
                                <Frame BackgroundColor="#8A2BE2"
                                       HeightRequest="20"
                                       WidthRequest="20"
                                       CornerRadius="10"
                                       Padding="0"
                                       HasShadow="False">
                                    <Image Source="check.png" 
                                           HeightRequest="12" 
                                           WidthRequest="12"/>
                                </Frame>
                                <Label Text="TIK TIME" 
                                       TextColor="#FF00FF" 
                                       FontSize="14" 
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- Stats Cards -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                    <!-- Customers Card -->
                    <Frame Grid.Column="0"
                           BackgroundColor="#2D1B69"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="user_icon.png"
                                   HeightRequest="30"
                                   WidthRequest="30"
/>
                            <Label Text="0"
                                   TextColor="White"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="مشتریان"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="CuctomerTapGestureRecognizer_OnTapped"></TapGestureRecognizer>
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Registrations Card -->
                    <Frame Grid.Column="1"
                           BackgroundColor="#2D1B69"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="book_icon.png"
                                   HeightRequest="30"
                                   WidthRequest="30"
/>
                            <Label Text="0"
                                   TextColor="White"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="ثبت نهی"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- SMS Section -->
                <Grid ColumnDefinitions="*,Auto,*" 
                      HeightRequest="80"
                      Margin="0,10">

                    <!-- Increase Balance -->
                    <Frame Grid.Column="0"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                            <Label Text="!"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="افزایش"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                            <Label Text="موجودی"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- SMS Button -->
                    <Frame Grid.Column="1"
                           BackgroundColor="#8A2BE2"
                           CornerRadius="40"
                           HeightRequest="80"
                           WidthRequest="80"
                           Padding="0"
                           HasShadow="True">
                        <VerticalStackLayout HorizontalOptions="Center" 
                                             VerticalOptions="Center" 
                                             Spacing="2">
                            <Label Text="SMS"
                                   TextColor="White"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="پیامک"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Buy Package -->
                    <Frame Grid.Column="2"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="10">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="2">
                            <Label Text="+"
                                   TextColor="White"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Label Text="خرید"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                            <Label Text="پکیج"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Feature Buttons Grid -->
                <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                      ColumnDefinitions="*,*" 
                      RowSpacing="10" 
                      ColumnSpacing="10">

                    <!-- Row 1 -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-5,-5,0"/>
                            </Frame>
                            <Image Source="bell_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <Label Text="یادآوری پیوتیم"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-5,-5,0"/>
                            </Frame>
                            <Image Source="speed_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <Label Text="سرعت تولید"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Row 2 -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-5,-5,0"/>
                            </Frame>
                            <Image Source="survey_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <Label Text="رضایت سنجی"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Image Source="signal_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <Label Text="پنل پیامک"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Row 3 -->
                    <Frame Grid.Row="2" Grid.Column="0"
                           BackgroundColor="#8A2BE2"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Label Text="NEW"
                                   TextColor="White"
                                   FontSize="10"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"/>
                            <Image Source="wallet_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
                                 />
                            <Label Text="کیف پول"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="2" Grid.Column="1"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-5,-5,0"/>
                            </Frame>
                            <Image Source="card_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <Label Text="کارت اعتباری"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                            <Label Text="جدید"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Row 4 -->
                    <Frame Grid.Row="3" Grid.Column="0"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-5,-5,0"/>
                            </Frame>
                            <Image Source="tracking_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <Label Text="پیگیری مشتری"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Row="3" Grid.Column="1"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <VerticalStackLayout HorizontalOptions="Center" Spacing="5">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="30"
                                   WidthRequest="30"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="10"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-5,-5,0"/>
                            </Frame>
                            <Image Source="store_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <Label Text="فروشگاهی"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </Frame>
                </Grid>

                <!-- Bottom Feature Buttons -->
                <Grid RowDefinitions="Auto,Auto" 
                      ColumnDefinitions="*,*" 
                      RowSpacing="10" 
                      ColumnSpacing="10"
                      Margin="0,10,0,0">

                    <!-- Reports -->
                    <Frame Grid.Row="0" Grid.Column="0"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Image Source="chart_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="گزارش"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                                <Label Text="و پیگیری"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Website -->
                    <Frame Grid.Row="0" Grid.Column="1"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Image Source="globe_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="وب سایت"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                                <Label Text="و نت ورک"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Panel Access -->
                    <Frame Grid.Row="1" Grid.Column="0"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="20"
                                   WidthRequest="20"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="8"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-3,-3,0"/>
                            </Frame>
                            <Image Source="panel_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="دسترسی"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                                <Label Text="به پنل"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>

                    <!-- Accounting -->
                    <Frame Grid.Row="1" Grid.Column="1"
                           BackgroundColor="#333333"
                           CornerRadius="15"
                           HasShadow="False"
                           Padding="15">
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="10">
                            <Frame BackgroundColor="#8A2BE2"
                                   CornerRadius="15"
                                   HeightRequest="20"
                                   WidthRequest="20"
                                   Padding="0"
                                   HasShadow="False">
                                <Label Text="0"
                                       TextColor="White"
                                       FontSize="8"
                                       HorizontalOptions="End"
                                       VerticalOptions="Start"
                                       Margin="0,-3,-3,0"/>
                            </Frame>
                            <Image Source="accounting_icon.png"
                                   HeightRequest="24"
                                   WidthRequest="24"
/>
                            <VerticalStackLayout Spacing="2">
                                <Label Text="حسابداری"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                                <Label Text="و ثبت هزینه"
                                       TextColor="White"
                                       FontSize="12"
                                       FlowDirection="RightToLeft"/>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </Grid>

                <!-- Bottom Spacing -->
                <BoxView HeightRequest="20" Color="Transparent"/>
            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>