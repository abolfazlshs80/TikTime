<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TikTime.MauiApp.MVVM.View.Account.LoginPasswordPage"
             Title="LoginPasswordPage"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Background Pattern -->
        <Image Source="background_circles.png" 
               Aspect="AspectFill" 
               Opacity="0.7"/>

        <VerticalStackLayout Spacing="20" 
                             Padding="20"
                             VerticalOptions="Center">

            <!-- Header -->
            <VerticalStackLayout Spacing="5" 
                                 HorizontalOptions="Center"
                                 Margin="0,0,0,30">
                <Label Text="WELCOME TO" 
                       TextColor="White" 
                       FontSize="20"
                       HorizontalOptions="Center"/>

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Frame BackgroundColor="#8A2BE2"
                           HeightRequest="24"
                           WidthRequest="24"
                           CornerRadius="12"
                           Padding="0"
                           HasShadow="False"
                           VerticalOptions="Center">
                        <Image Source="check.png" 
                               HeightRequest="14" 
                               WidthRequest="14"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>
                    </Frame>
                    <Label Text="TIK TIME" 
                           TextColor="#FF00FF" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Verification Form -->
            <Frame BackgroundColor="#E0E0E0" 
                   CornerRadius="20" 
                   HasShadow="False"
                   Padding="15">
                <VerticalStackLayout Spacing="20">
                    <!-- Header with Back Button and Timer -->
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <!-- Back Button -->
                        <Frame Grid.Column="0"
                               BackgroundColor="#CCCCCC"
                               HeightRequest="36"
                               WidthRequest="36"
                               CornerRadius="18"
                               Padding="0"
                               HasShadow="False">
                            <Label Text="〱"
                                   HeightRequest="16"
                                   WidthRequest="16"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>

                        <!-- Timer -->
                        <Frame Grid.Column="2"
                               BackgroundColor="#CCCCCC"
                               Padding="10,5"
                               CornerRadius="8"
                               HasShadow="False">
                            <HorizontalStackLayout Spacing="5">
                                <Label Text="01"
                                       TextColor="Black"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                                <Label Text=":"
                                       TextColor="Black"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                                <Label Text="06"
                                       TextColor="Black"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Frame>
                    </Grid>

                    <!-- Instructions Text کد فعالسازی را وارد نمایید-->
                    <Label Text="کلمه عبور را وارد کنید"
                           TextColor="Black"
                           FontSize="16"
                           HorizontalOptions="Center"
                           FlowDirection="RightToLeft"/>

                    <!-- Phone Number -->
                    <Label Text="09389114506"
                           TextColor="#666666"
                           FontSize="16"
                           HorizontalOptions="Center"/>

                    <!-- Verification Code Input -->
                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                        <Frame HeightRequest="45"
                               WidthRequest="45"
                               CornerRadius="8"
                               BackgroundColor="White"
                               BorderColor="#DDDDDD"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="Digit1" TextColor="Black"  MaxLength="1" Keyboard="Numeric" TextChanged="OnDigitChanged"  ></Entry>
                        </Frame>

                        <Frame HeightRequest="45"
                               WidthRequest="45"
                               CornerRadius="8"
                               BackgroundColor="White"
                               BorderColor="#DDDDDD"
                               Padding="0"
                               HasShadow="False">
                            <Entry  x:Name="Digit2"  TextColor="Black" MaxLength="1" Keyboard="Numeric" TextChanged="OnDigitChanged" ></Entry>
                        </Frame>

                        <Frame HeightRequest="45"
                               WidthRequest="45"
                               CornerRadius="8"
                               BackgroundColor="White"
                               BorderColor="#DDDDDD"
                               Padding="0"
                               HasShadow="False">
                            <Entry  x:Name="Digit3"  TextColor="Black" MaxLength="1" Keyboard="Numeric" TextChanged="OnDigitChanged" ></Entry>
                        </Frame>

                        <Frame HeightRequest="45"
                               WidthRequest="45"
                               CornerRadius="8"
                               BackgroundColor="White"
                               BorderColor="#DDDDDD"
                               Padding="0"
                               HasShadow="False">
                            <Entry  x:Name="Digit4"  TextColor="Black" MaxLength="1" Keyboard="Numeric" TextChanged="OnDigitChanged" ></Entry>
                        </Frame>

                        <Frame HeightRequest="45"
                               WidthRequest="45"
                               CornerRadius="8"
                               BackgroundColor="White"
                               BorderColor="#DDDDDD"
                               Padding="0"
                               HasShadow="False">
                            <Entry  x:Name="Digit5"   TextColor="Black" MaxLength="1" Keyboard="Numeric" TextChanged="OnDigitChanged" ></Entry>
                        </Frame>

                        <Frame HeightRequest="45"
                               WidthRequest="45"
                               CornerRadius="8"
                               BackgroundColor="White"
                               BorderColor="#DDDDDD"
                               Padding="0"
                               HasShadow="False">
                            <Entry x:Name="Digit6" TextColor="Black" MaxLength="1" Keyboard="Numeric" TextChanged="OnDigitChanged" ></Entry>
                        </Frame>
                    </HorizontalStackLayout>

                    <!-- Login Button -->
                    <Button Text="ورود به سیستم"
                            TextColor="White"
                            BackgroundColor="Black"
                            CornerRadius="10"
                            FontSize="16"
                            HeightRequest="50"
                            FlowDirection="RightToLeft"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Support Options -->
            <Frame BackgroundColor="#222222"
                   CornerRadius="20"
                   HasShadow="False"
                   Padding="15"
                   Margin="0,20,0,0">
                <Grid ColumnDefinitions="*,1,*">
                    <!-- Telegram Support -->
                    <VerticalStackLayout Grid.Column="0"
                                         HorizontalOptions="Center"
                                         Spacing="5">
                        <Image Source="telegram_icon.png"
                               HeightRequest="30"
                               WidthRequest="30"
                               HorizontalOptions="Center"/>
                        <VerticalStackLayout Spacing="0" HorizontalOptions="Center">
                            <Label Text="پشتیبانی"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                            <Label Text="تلگرام"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>

                    <!-- Divider -->
                    <BoxView Grid.Column="1"
                             Color="#444444"
                             WidthRequest="1"
                             VerticalOptions="Fill"
                             Margin="0,10"/>

                    <!-- WhatsApp Support -->
                    <VerticalStackLayout Grid.Column="2"
                                         HorizontalOptions="Center"
                                         Spacing="5">
                        <Image Source="whatsapp_icon.png"
                               HeightRequest="30"
                               WidthRequest="30"
                               HorizontalOptions="Center"/>
                        <VerticalStackLayout Spacing="0" HorizontalOptions="Center">
                            <Label Text="پشتیبانی"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                            <Label Text="واتساپ"
                                   TextColor="White"
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   FlowDirection="RightToLeft"/>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Copyright -->
            <Label Text="All Rights Reserved By TikTime"
                   TextColor="White"
                   FontSize="12"
                   HorizontalOptions="Center"
                   Margin="0,30,0,0"/>
            <Label Text="© 2025"
                   TextColor="White"
                   FontSize="12"
                   HorizontalOptions="Center"
                   Margin="-5,0,0,0"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>